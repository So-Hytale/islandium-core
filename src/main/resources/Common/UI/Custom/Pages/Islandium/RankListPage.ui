$C = "../../Common.ui";

$C.@PageOverlay {
    $C.@Container {
        Anchor: (Width: 500, Height: 400);

        #Title {
            Group {
                $C.@Title {
                    @Text = "Gestion des Ranks";
                }
            }
        }

        #Content {
            LayoutMode: Top;

            Group #RankList {
                FlexWeight: 1;
                LayoutMode: TopScrolling;
                ScrollbarStyle: $C.@DefaultScrollbarStyle;
            }

            Label #Footer {
                Text: "Utilisez /rank pour gerer les ranks";
                Anchor: (Height: 30, Top: 10);
                Style: (
                    FontSize: 12,
                    TextColor: #808080,
                    HorizontalAlignment: Center
                );
            }
        }
    }
}
