$C = "../../Common.ui";

$C.@PageOverlay {
    $C.@Container {
        Anchor: (Width: 750, Height: 500);

        #Title {
            Group {
                TextButton #BackButton {
                    Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
                    Padding: (Left: 8, Top: 2);
                    Text: "< Retour";
                    Style: TextButtonStyle(
                        Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
                        Sounds: $C.@ButtonSounds,
                    );
                    Background: #000000(0.13);
                }
                $C.@Title {
                    @Text = "Gestion des Serveurs";
                }
            }
        }

        #Content {
            LayoutMode: Left;

            // Colonne 1 - Liste des Serveurs
            Group #LeftPanel {
                Anchor: (Width: 200);
                LayoutMode: Top;
                Padding: (Right: 5);

                Label {
                    Text: "Serveurs";
                    Anchor: (Height: 30);
                    Style: (FontSize: 16, TextColor: #ffd700, RenderBold: true);
                }

                Group #ServerList {
                    FlexWeight: 1;
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                    Background: (Color: #0a0f17);
                    Padding: (Full: 5);
                }

                $C.@TextButton #CreateButton {
                    Anchor: (Height: 40, Top: 10);
                    Text: "+ Nouveau";
                }
            }

            Group {
                Anchor: (Width: 2);
                Background: (Color: #4a4a6a);
            }

            // Colonne 2 - Edition
            Group #RightPanel {
                FlexWeight: 1;
                LayoutMode: Top;
                Padding: (Left: 10);

                Label #EditorTitle {
                    Text: "Selectionnez un serveur";
                    Anchor: (Height: 35);
                    Style: (FontSize: 18, TextColor: #ffd700, RenderBold: true);
                }

                // Formulaire d'edition
                Group #EditorContent {
                    FlexWeight: 1;
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                    Visible: false;

                    Label {
                        Text: "Host:";
                        Anchor: (Height: 22);
                        Style: (FontSize: 12, TextColor: #96a9be);
                    }
                    $C.@TextField #HostField {
                        Anchor: (Height: 32);
                        PlaceholderText: "127.0.0.1";
                    }

                    Label {
                        Text: "Port:";
                        Anchor: (Height: 22, Top: 8);
                        Style: (FontSize: 12, TextColor: #96a9be);
                    }
                    $C.@TextField #PortField {
                        Anchor: (Height: 32);
                        PlaceholderText: "25565";
                    }

                    Label {
                        Text: "Nom d'affichage:";
                        Anchor: (Height: 22, Top: 8);
                        Style: (FontSize: 12, TextColor: #96a9be);
                    }
                    $C.@TextField #DisplayNameField {
                        Anchor: (Height: 32);
                    }

                    // Boutons d'action
                    Group {
                        Anchor: (Height: 50, Top: 20);
                        LayoutMode: Left;

                        TextButton #SaveButton {
                            Anchor: (Width: 120, Height: 44);
                            Text: "Sauvegarder";
                            Style: TextButtonStyle(
                                Default: (
                                    Background: #2d5a2d,
                                    LabelStyle: (FontSize: 13, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                                ),
                                Hovered: (
                                    Background: #3d7a3d,
                                    LabelStyle: (FontSize: 13, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                                ),
                                Pressed: (
                                    Background: #1d4a1d,
                                    LabelStyle: (FontSize: 13, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                                ),
                                Sounds: $C.@ButtonSounds,
                            );
                        }

                        TextButton #DeleteButton {
                            Anchor: (Width: 120, Left: 8, Height: 44);
                            Text: "Supprimer";
                            Style: TextButtonStyle(
                                Default: (
                                    Background: #8b2020,
                                    LabelStyle: (FontSize: 13, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                                ),
                                Hovered: (
                                    Background: #ab3030,
                                    LabelStyle: (FontSize: 13, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                                ),
                                Pressed: (
                                    Background: #6b1010,
                                    LabelStyle: (FontSize: 13, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                                ),
                                Sounds: $C.@ButtonSounds,
                            );
                        }
                    }
                }

                // Formulaire de creation
                Group #CreateContent {
                    FlexWeight: 1;
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                    Visible: false;

                    Label {
                        Text: "Identifiant unique:";
                        Anchor: (Height: 22);
                        Style: (FontSize: 12, TextColor: #96a9be);
                    }
                    $C.@TextField #NewNameField {
                        Anchor: (Height: 32);
                        PlaceholderText: "lobby";
                    }

                    Label {
                        Text: "Host:";
                        Anchor: (Height: 22, Top: 10);
                        Style: (FontSize: 12, TextColor: #96a9be);
                    }
                    $C.@TextField #NewHostField {
                        Anchor: (Height: 32);
                        PlaceholderText: "127.0.0.1";
                    }

                    Label {
                        Text: "Port:";
                        Anchor: (Height: 22, Top: 10);
                        Style: (FontSize: 12, TextColor: #96a9be);
                    }
                    $C.@TextField #NewPortField {
                        Anchor: (Height: 32);
                        PlaceholderText: "25565";
                    }

                    Label {
                        Text: "Nom d'affichage:";
                        Anchor: (Height: 22, Top: 10);
                        Style: (FontSize: 12, TextColor: #96a9be);
                    }
                    $C.@TextField #NewDisplayNameField {
                        Anchor: (Height: 32);
                        PlaceholderText: "Mon Serveur";
                    }

                    Group {
                        Anchor: (Height: 50, Top: 20);
                        LayoutMode: Left;

                        $C.@TextButton #ConfirmCreateButton {
                            Anchor: (Width: 120, Height: 44);
                            Text: "Creer";
                        }

                        $C.@SecondaryTextButton #CancelCreateButton {
                            Anchor: (Width: 120, Left: 15, Height: 44);
                            Text: "Annuler";
                        }
                    }
                }

                // Placeholder quand rien n'est selectionne
                Group #NoServerSelected {
                    FlexWeight: 1;
                    Label {
                        Anchor: (Height: 40);
                        Text: "Selectionnez un serveur pour l'editer";
                        Style: (FontSize: 12, TextColor: #808080, HorizontalAlignment: Center, VerticalAlignment: Center);
                    }
                }
            }
        }
    }
}
