$C = "../../../Common.ui";
$Nav = "../Nav/Islandium_TopNavigationBar.ui";

$C.@PageOverlay {
    $Nav.@IslandiumTopNavigationBar #IslandiumTopNavigationBar {}
    $C.@Container {
        Anchor: (Width: 900, Height: 600);

        #Title {
            Group {
                TextButton #BackButton {
                    Anchor: (Left: 12, Top: 4, Width: 80, Height: 28);
                    Padding: (Left: 8, Top: 2);
                    Text: "< Retour";
                    Style: TextButtonStyle(
                        Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
                        Sounds: $C.@ButtonSounds,
                    );
                    Background: #000000(0.13);
                }
                $C.@Title {
                    @Text = "Recherche par Item";
                }
            }
        }

        #Content {
            LayoutMode: Top;
            Padding: (Full: 15);

            // Item header section
            Group #ItemHeader {
                Anchor: (Height: 90);
                Background: (Color: #151d28);
                LayoutMode: Left;
                Padding: (Full: 15);

                // Item icon container
                Group #ItemIcon {
                    Anchor: (Width: 60, Height: 60);
                    Background: (Color: #1a1a2e);
                    Padding: (Full: 6);
                }

                Group { Anchor: (Width: 15); }

                // Item info
                Group #ItemInfo {
                    FlexWeight: 1;
                    LayoutMode: Top;

                    Label #ItemName {
                        Anchor: (Height: 32);
                        Text: "Nom de l'item";
                        Style: (FontSize: 20, TextColor: #ffd700, RenderBold: true, VerticalAlignment: Center);
                    }

                    Group #ItemMeta {
                        Anchor: (Height: 24);
                        LayoutMode: Left;

                        Label #ItemId {
                            Text: "item_id";
                            Style: (FontSize: 12, TextColor: #808080, VerticalAlignment: Center);
                        }
                    }
                }
            }

            Group { Anchor: (Height: 10); }

            // Entities section header
            Group #EntitiesHeader {
                Anchor: (Height: 35);
                Background: (Color: #1a2332);
                LayoutMode: Left;
                Padding: (Horizontal: 15);

                Label {
                    FlexWeight: 1;
                    Text: "OBTENU SUR";
                    Style: (FontSize: 14, TextColor: #ffd700, RenderBold: true, VerticalAlignment: Center);
                }

                Label #EntityCount {
                    Anchor: (Width: 100);
                    Text: "0 entites";
                    Style: (FontSize: 12, TextColor: #808080, VerticalAlignment: Center, HorizontalAlignment: End);
                }
            }

            // Entities list
            Group #EntitiesList {
                FlexWeight: 1;
                LayoutMode: TopScrolling;
                ScrollbarStyle: $C.@DefaultScrollbarStyle;
                Background: (Color: #0a0f17);
                Padding: (Full: 10);
            }

            // No entities message
            Group #NoEntitiesMessage {
                FlexWeight: 1;
                Visible: false;
                Background: (Color: #0a0f17);

                Label {
                    Text: "Aucune entite ne drop cet item";
                    Style: (FontSize: 14, TextColor: #808080, HorizontalAlignment: Center, VerticalAlignment: Center);
                }
            }
        }
    }
}
