$C = "../../Common.ui";

$C.@PageOverlay {
    $C.@Container {
        Anchor: (Width: 900, Height: 600);

        #Title {
            Group {
                $C.@Title {
                    @Text = "ESSENTIALS";
                }
            }
        }

        #Content {
            LayoutMode: Top;

            Group #NavBar {
                Anchor: (Height: 45);
                Background: (Color: #16212f);
                LayoutMode: Left;
                Padding: (Horizontal: 10);

                Group #NavButtons {
                    FlexWeight: 1;
                    LayoutMode: Left;
                }

                TextButton #CloseButton {
                    Anchor: (Width: 40, Height: 40);
                    Text: "X";
                    Style: TextButtonStyle(
                        Default: (
                            LabelStyle: (FontSize: 16, TextColor: #ff4444, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                        ),
                        Hovered: (
                            Background: #2a1a1a,
                            LabelStyle: (FontSize: 16, TextColor: #ff6666, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
                        ),
                        Sounds: $C.@ButtonSounds,
                    );
                }
            }

            Group #HomePage {
                FlexWeight: 1;
                LayoutMode: Top;
                Padding: (Full: 15);

                Label {
                    Text: "Bienvenue dans Islandium";
                    Anchor: (Height: 50);
                    Style: (FontSize: 24, TextColor: #ffd700, RenderBold: true, HorizontalAlignment: Center);
                }

                Label {
                    Text: "Selectionnez une section dans la barre de navigation ci-dessus.";
                    Anchor: (Height: 30);
                    Style: (FontSize: 14, TextColor: #96a9be, HorizontalAlignment: Center);
                }

                Group #QuickStats {
                    Anchor: (Height: 150, Top: 30);
                    LayoutMode: Left;

                    Group {
                        FlexWeight: 1;
                        Background: (Color: #151d28);
                        Padding: (Full: 15);
                        LayoutMode: Top;

                        Label {
                            Text: "Ranks";
                            Anchor: (Height: 25);
                            Style: (FontSize: 14, TextColor: #ffd700, RenderBold: true);
                        }
                        Label #RankCount {
                            Text: "0";
                            Anchor: (Height: 40);
                            Style: (FontSize: 32, TextColor: #ffffff, RenderBold: true);
                        }
                        Label {
                            Text: "configures";
                            Anchor: (Height: 20);
                            Style: (FontSize: 12, TextColor: #808080);
                        }
                    }

                    Group { Anchor: (Width: 15); }

                    Group {
                        FlexWeight: 1;
                        Background: (Color: #151d28);
                        Padding: (Full: 15);
                        LayoutMode: Top;

                        Label {
                            Text: "Warps";
                            Anchor: (Height: 25);
                            Style: (FontSize: 14, TextColor: #00bfff, RenderBold: true);
                        }
                        Label #WarpCount {
                            Text: "0";
                            Anchor: (Height: 40);
                            Style: (FontSize: 32, TextColor: #ffffff, RenderBold: true);
                        }
                        Label {
                            Text: "points";
                            Anchor: (Height: 20);
                            Style: (FontSize: 12, TextColor: #808080);
                        }
                    }

                    Group { Anchor: (Width: 15); }

                    Group {
                        FlexWeight: 1;
                        Background: (Color: #151d28);
                        Padding: (Full: 15);
                        LayoutMode: Top;

                        Label {
                            Text: "Kits";
                            Anchor: (Height: 25);
                            Style: (FontSize: 14, TextColor: #00ff7f, RenderBold: true);
                        }
                        Label #KitCount {
                            Text: "0";
                            Anchor: (Height: 40);
                            Style: (FontSize: 32, TextColor: #ffffff, RenderBold: true);
                        }
                        Label {
                            Text: "disponibles";
                            Anchor: (Height: 20);
                            Style: (FontSize: 12, TextColor: #808080);
                        }
                    }

                    Group { Anchor: (Width: 15); }

                    Group {
                        FlexWeight: 1;
                        Background: (Color: #151d28);
                        Padding: (Full: 15);
                        LayoutMode: Top;

                        Label {
                            Text: "Joueurs";
                            Anchor: (Height: 25);
                            Style: (FontSize: 14, TextColor: #ff69b4, RenderBold: true);
                        }
                        Label #PlayerCount {
                            Text: "0";
                            Anchor: (Height: 40);
                            Style: (FontSize: 32, TextColor: #ffffff, RenderBold: true);
                        }
                        Label {
                            Text: "en ligne";
                            Anchor: (Height: 20);
                            Style: (FontSize: 12, TextColor: #808080);
                        }
                    }
                }
            }

            Group #SubPageContent {
                FlexWeight: 1;
                Visible: false;
                Padding: (Full: 15);
            }
        }
    }
}
