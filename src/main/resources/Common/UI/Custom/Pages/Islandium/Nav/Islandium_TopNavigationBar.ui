@ToolButton = MenuItem {
  Padding: (Horizontal: 30);
  TextTooltipStyle: (MaxWidth: 300, LabelStyle: (Wrap: true, FontSize: 16));
  PopupStyle: (
    Background: #121a26,
    ButtonPadding: (Left: 30, Top: 7, Bottom: 7, Right: 20),
    Padding: (Bottom: 10),
    TooltipStyle: (MaxWidth: 300, LabelStyle: (Wrap: true, FontSize: 16)),
    ButtonStyle: (
      Default: (
        LabelStyle: (FontSize: 13, TextColor: #7c8b99),
        BindingLabelStyle: (FontSize: 13, TextColor: #ffffff(0.2))
      ),
      Hovered: (
        Background: #000000(0.2),
        LabelStyle: (FontSize: 13, TextColor: #7c8b99),
        BindingLabelStyle: (FontSize: 13, TextColor: #ffffff(0.2))
      )
    ),
    SelectedButtonStyle: (
      Default: (
        LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true),
        BindingLabelStyle: (FontSize: 13, TextColor: #ffffff(0.2))
      ),
      Hovered: (
        Background: #000000(0.2),
        LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true),
        BindingLabelStyle: (FontSize: 13, TextColor: #ffffff(0.2))
      )
    )
  );
  Style: (
    Default: (
      LabelStyle: (FontSize: 15, TextColor: #7c8b99, VerticalAlignment: Center, RenderUppercase: true, RenderBold: true)
    ),
    Hovered: (
      Background: #121a26,
      LabelStyle: (FontSize: 15, TextColor: #7c8b99, VerticalAlignment: Center, RenderUppercase: true, RenderBold: true)
    )
  );
  SelectedStyle: (
    Default: (
      LabelStyle: (FontSize: 15, TextColor: #ffd700, VerticalAlignment: Center, RenderUppercase: true, RenderBold: true)
    ),
    Hovered: (
      Background: #121a26,
      LabelStyle: (FontSize: 15, TextColor: #ffd700, VerticalAlignment: Center, RenderUppercase: true, RenderBold: true)
    )
  );
};

@IslandiumTopNavigationBar = Group {
   Anchor: (Height: 50, Top: 0);
   Background: #16212f;

   Group #NavBarButtons {
     LayoutMode: Left;
   }
};
